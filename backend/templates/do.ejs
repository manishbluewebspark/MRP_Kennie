<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Delivery Order</title>
  <style>
    @page {
      size: A4;
      margin: 20mm;
    }

    body {
      font-family: Arial, sans-serif;
      font-size: 10pt;
      line-height: 1.4;
      color: #000;
      margin: 0;
      padding: 0;
    }

    .header {
      margin-bottom: 20px;
    }

    .company-address {
      float: left;
      width: 50%;
    }

    .deliver-to {
      float: right;
      width: 50%;
      text-align: right;
    }

    .clear {
      clear: both;
    }

    .document-title {
      text-align: center;
      font-size: 16pt;
      font-weight: bold;
      margin: 25px 0;
      text-decoration: underline;
    }

    .document-info {
      margin-bottom: 20px;
    }

    .info-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    .info-table td {
      padding: 4px 8px;
      vertical-align: top;
    }

    .info-table .label {
      font-weight: bold;
      width: 120px;
    }

    .items-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 30px;
    }

    .items-table th,
    .items-table td {
      border: 1px solid #000;
      padding: 6px 8px;
      text-align: left;
      font-size: 9pt;
    }

    .items-table th {
      background-color: #f0f0f0;
      font-weight: bold;
    }

    .items-table .no-col {
      width: 5%;
    }

    .items-table .pos-col {
      width: 10%;
    }

    .items-table .barcode-col {
      width: 20%;
    }

    .items-table .qty-col {
      width: 5%;
    }

    .items-table .project-col {
      width: 20%;
    }

    .items-table .item-col {
      width: 20%;
    }

    .items-table .desc-col {
      width: 42%;
    }

    .footer {
      margin-top: 50px;
    }

    .signature-section {
      margin-top: 40px;
    }

    .signature-box {
      width: 60%;
      margin-top: 60px;
      border-top: 1px solid #000;
      padding-top: 10px;
    }

    .page-number {
      text-align: right;
      font-size: 9pt;
      margin-top: 10px;
    }

    .company-stamp {
      font-weight: bold;
      margin-top: 30px;
      font-size: 11pt;
    }

    .barcode-container {
      text-align: center;
    }

    .barcode-image {
      max-width: 120px;
      max-height: 40px;
    }

    .barcode-text {
      font-size: 8pt;
      margin-top: 2px;
      font-family: monospace;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
</head>

<body onload="generateBarcodes()">

  <div class="header">
    <div class="company-address">
      <%= meta.company.address %><br>
        Tel: <%= meta.company.tel %> Fax: <%= meta.company.fax %><br>
            Email: <%= meta.company.email %> Website: <%= meta.company.website %><br>
                Company/GST Reg no: <%= meta.company.gstRegNo %>
    </div>
    <div class="deliver-to">
      <strong>Deliver To:</strong><br>
      <%= meta.deliverTo.name %><br>
        <%= meta.deliverTo.address %><br>
          <br>
          Attn: <%= meta.deliverTo.attn %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="document-title">DELIVERY ORDER</div>

  <div class="document-info">
    <table class="info-table">
      <tr>
        <!-- <td class="label">Page:</td>
                <td><%= meta.docInfo.page %></td> -->
        <td class="label">DO No:</td>
        <td>
          <%= meta.docInfo.doNo %>
        </td>
      </tr>
      <tr>
        <td class="label">Date:</td>
        <td>
          <%= meta.docInfo.date %>
        </td>
        <td class="label">PO No:</td>
        <td>
          <%= meta.docInfo.poNo %>
        </td>
      </tr>
      <tr>
        <td class="label">Terms:</td>
        <td>
          <%= meta.docInfo.terms %>
        </td>
        <td class="label">Salesperson:</td>
        <td>
          <%= meta.docInfo.salesperson %>
        </td>
      </tr>
    </table>
  </div>

  <table class="items-table">
    <thead>
      <tr>
        <th class="no-col">No.</th>
        <th class="pos-col">Pos</th>
        <th class="barcode-col">Barcode</th>
        <th class="qty-col">Qty</th>
        <th class="project-col">Project Nr</th>
        <th class="item-col">Item</th>
        <th class="desc-col">Description</th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(function(item, index) { %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= item.pos %>
          </td>
          <td>
            <div class="barcode-container">
              <svg id="barcode-<%= index %>" class="barcode-image"></svg>
            </div>
          </td>
          <td>
            <%= item.qty %>
          </td>
          <td>
            <%= item.projectNr %>
          </td>
          <td>
            <%= item.item %>
          </td>
          <td>
            <%= item.description %>
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>

  <div class="footer">
    <div class="signature-section">
      <div>Goods received by:</div>
      <div class="signature-box">
        <div class="company-stamp">
          <%= meta.company.stampName %>
        </div>
        <div style="margin-top: 40px;">Recipient’s Signature & Company Stamp</div>
        <div style="margin-top: 30px;">Authorised Signatory</div>
      </div>
    </div>
    <div class="page-number">Page: <%= meta.docInfo.page %>
    </div>
  </div>

  <script>
    function generateBarcodes() {
            <% rows.forEach(function (item, index) { %>
      // SVG बारकोड जेनरेट करें
      JsBarcode("#barcode-<%= index %>", "<%= item.barcode %>", {
        format: "CODE128",
        width: 2,
        height: 40,
        displayValue: false,
        margin: 0
      });
            <% }); %>
        }
  </script>

</body>

</html>